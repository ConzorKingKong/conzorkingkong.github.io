@import "~normalize.css/normalize.css"

*, *::after, *::before
  box-sizing border-box

baseFontSize = 16px

textColor = green

html
  background #eee
  color textColor

html, body
  width 100%
  min-height 100vh

body
  overflow-y scroll

svg
  display block
  width 100%
  height 100%

body
  font-family sansSerifFonts
  font-size baseFontSize

div, footer, header, main, section
  display flex

[data-flow="column"]
  display flex
  flex-flow column nowrap

