@import "~normalize.css/normalize.css"

*, *::after, *::before
  box-sizing border-box

baseFontSize = 16px

html, body
  min-height 100vh

body
  overflow-y scroll

svg
  display block
  width 100%
  height 100%

body
  font-family sansSerifFonts
  font-size baseFontSize

div, footer, header, main, section
  display flex

[data-flow="column"]
  display flex
  flex-flow column nowrap

main
  height 100vh
  text-align center
  font-family 'bungee shade', cursive
  color white
  background-color black
  font-size 10vh
  cursor pointer

main h1
  margin 10vh 0 0 0

.subtitle
  margin 0

.click-to-continue
  bottom 0
  position absolute
  left 25vw
  right 25vw

.section-two
  height 100vh
  text-align center
